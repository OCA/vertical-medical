<odoo>

        <record id="ir_module_category_workflow" model="ir.module.category">
            <field name="name">Workflow</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_workflow_user" model="res.groups">
            <field name="name">Workflow User</field>
            <field name="category_id" ref="ir_module_category_workflow"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_workflow_manager" model="res.groups">
            <field name="name">Workflow Manager</field>
            <field name="category_id" ref="ir_module_category_workflow"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="implied_ids"
                   eval="[(4, ref('workflow_plandefinition.group_workflow_user'))]"/>
        </record>

</odoo>
