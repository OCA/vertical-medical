<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_medical_hospital_unit_tree" model="ir.ui.view">
            <field name="name">medical.hospital.unit.tree</field>
            <field name="model">medical.hospital.unit</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Medical Hospital Unit">
                    <field name="name" />
                    <field name="code" />
                    <field name="partner_id" />
                    <field name="notes" />
                </tree>
            </field>
        </record>

        <record id="view_medical_hospital_unit_form" model="ir.ui.view">
            <field name="name">medical.hospital.unit.form</field>
            <field name="model">medical.hospital.unit</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Medical Hospital Unit">
                    <field name="code" />
                    <field name="partner_id" />
                    <field name="name" />
                    <field name="notes" />
                </form>
            </field>
        </record>

        <record id="view_medical_hospital_unit_search" model="ir.ui.view">
            <field name="name">medical.hospital.unit.search</field>
            <field name="model">medical.hospital.unit</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Medical Hospital Unit">
                    <field name="code" />
                    <field name="partner_id" />
                    <field name="name" />
                    <field name="notes" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Code" domain="[]" context="{'group_by':'code'}" />
                        <filter string="Institution" domain="[]"
                            context="{'group_by':'partner_id'}" />
                        <filter string="Name" domain="[]" context="{'group_by':'name'}" />
                        <filter string="Notes" domain="[]"
                            context="{'group_by':'notes'}" />
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_medical_hospital_unit_view">
            <field name="name">Hospital Unit</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.hospital.unit</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_medical_hospital_unit_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_medical_hospital_unit_view_form">
            <field name="act_window_id" ref="act_open_medical_hospital_unit_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_medical_hospital_unit_form" />
        </record>

        <record model="ir.actions.act_window.view" id="act_open_medical_hospital_unit_view_tree">
            <field name="act_window_id" ref="act_open_medical_hospital_unit_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_medical_hospital_unit_tree" />
        </record>

    </data>
</openerp>