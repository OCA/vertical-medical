<odoo>

    <record model="ir.ui.view" id="medical_request_tree">
        <field name="name">medical.request.tree</field>
        <field name="model">medical.request</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree>
                <field name="internal_identifier"/>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="service_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="medical_request_form">
        <field name="name">medical.request.form</field>
        <field name="model">medical.request</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <form string="Request">
                <header>
                    <button string="Activate" type="object" name="draft2active"
                            class="oe_highlight"
                            attrs="{'invisible': [('state','!=','draft')]}"/>
                    <button string="Complete" type="object"
                            name="active2completed" class="oe_highlight"
                            attrs="{'invisible': [('state','!=','active')]}"/>
                    <button string="Suspend" type="object"
                            name="active2suspended" class="oe_highlight"
                            attrs="{'invisible': [('state','!=','active')]}"/>
                    <button string="Set error" type="object"
                            name="active2error" class="oe_highlight"
                            attrs="{'invisible': [('state','!=','active')]}"/>
                    <button string="Reactivate" type="object"
                            name="reactive" class="oe_highlight"
                            attrs="{'invisible': [('state','not in',['suspended', 'entered-in-error', 'cancelled'])]}"/>
                    <button string="Cancel" type="object"
                            name="cancel" class="oe_highlight"
                            attrs="{'invisible': [('state','in',['completed', 'entered-in-error', 'cancelled'])]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box"/>
                    <h2>
                        <field name="internal_identifier" readonly="1"/>
                    </h2>
                    <group name="details" cols="4">
                        <group>
                            <field name="is_editable" invisible="1"/>
                            <field name="name"
                                   attrs="{'readonly':[('is_editable', '=', False)]}"/>
                            <field name="patient_id"
                                   attrs="{'readonly':[('is_editable', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="intent"
                                   attrs="{'readonly':[('is_editable', '=', False)]}"/>
                            <field name="priority"
                                   attrs="{'readonly':[('is_editable', '=', False)]}"/>
                        </group>
                    </group>
                    <group name="sale">
                        <group>
                            <field name="service_id"
                                   attrs="{'readonly':[('is_editable', '=', False)]}"/>
                            <field name="performer_id"
                                   attrs="{'readonly':[('is_editable', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="order_by_id"
                                   attrs="{'readonly':[('is_editable', '=', False)]}"/>
                            <field name="order_date"
                                   attrs="{'readonly':[('is_editable', '=', False)]}"/>
                        </group>
                    </group>
                    <group name="inheritance"/>
                    <notebook/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

</odoo>
