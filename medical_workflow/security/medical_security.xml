<odoo>

    <data noupdate="1">
        <record id="ir_module_category_workflow" model="ir.module.category">
            <field name="name">Workflow</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_workflow_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="ir_module_category_workflow"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_workflow_configurator" model="res.groups">
            <field name="name">System Administrator</field>
            <field name="category_id" ref="ir_module_category_workflow"/>
            <field name="implied_ids"
                   eval="[(4, ref('group_workflow_user'))]"/>
        </record>

        <record id="base.group_erp_manager" model="res.groups">
            <field name="implied_ids"
                   eval="[(4, ref('group_workflow_configurator'))]"/>
        </record>
        <record id="group_patient_add_plan_definition" model="res.groups">
            <field name="name">Add Plan definition on patient</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>
        <record id="group_main_activity_plan_definition" model="res.groups">
            <field name="name">Manage a possible parent activity on plan definition</field>
        </record>
    </data>
    <data noupdate="1">
        <record id="group_patient_add_plan_definition" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
    </data>

</odoo>
