<odoo>

    <record id="medical_location_view_tree" model="ir.ui.view">
        <field name="name">medical.location.tree</field>
        <field name="model">medical.location</field>
        <field name="inherit_id" ref="medical_administration.medical_abstract_partner_tree"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="string">Medical Locations</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="description" />
                <field name="state" />
            </xpath>
        </field>
    </record>

    <record id="medical_location_view_form" model="ir.ui.view">
        <field name="name">medical.location.form</field>
        <field name="model">medical.location</field>
        <field name="inherit_id" ref="medical_administration.medical_abstract_partner_form"/>
        <field name="mode">primary</field>
        <field name="priority" eval="100" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="string">Medical Locations</attribute>
            </xpath>
            <xpath expr="//header" position="attributes">
                <field name="state"
                       widget="statusbar"
                       clickable="True"/>
            </xpath>
            <xpath expr="//div[@class='oe_title']">
                <field name="description" />
            </xpath>
        </field>
    </record>

    <record id="medical_center_view_kanban" model="ir.ui.view">
        <field name="name">medical.location.kanban</field>
        <field name="model">medical.location</field>
        <field name="inherit_id" ref="medical_administration.medical_abstract_partner_kanban"/>
        <field name="mode">primary</field>
        <field name="priority" eval="100" />
        <field name="arch" type="xml">
            <xpath expr="//kanban" position="attributes">
                <attribute name="string">Medical Locations</attribute>
            </xpath>
        </field>
    </record>

    <record id="medical_location_action" model="ir.actions.act_window">
        <field name="name">Medical Locations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">medical.location</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_ids"
               eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'kanban', 'view_id': ref('medical_center_view_kanban')}),
                      (0, 0, {'view_mode': 'tree', 'view_id': ref('medical_location_view_tree')}),
                      (0, 0, {'view_mode': 'form', 'view_id': ref('medical_location_view_form')}),
                     ]"
        />
    </record>

</odoo>
