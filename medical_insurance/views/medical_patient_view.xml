<?xml version="1.0" encoding="UTF-8"?>

<odoo>

		<record id="medical_patient_view_form" model="ir.ui.view">
            <field name="name">medical.patient.form</field>
             <field name="model">medical.patient</field>
            <field name="inherit_id" ref="medical.medical_patient_view_form"/>
            <field name="arch" type="xml">
				<xpath expr="//notebook" position="inside">
					<page string="Insurance">
						<group>
							<field name="insurance_plan_ids" nolabel="1">
                                <tree string="Actions">
									<field name="insurance_template_id"/>
									<field name="number"/>
                                    <field name="name"/>
                                    <field name="insurance_company_id"/>
									<field name="active"/>
                                </tree>
                            </field>
						</group>
					</page>
				</xpath>
            </field>
        </record>

</odoo>
