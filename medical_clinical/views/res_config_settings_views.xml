<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.medical</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="medical_base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='medical_clinical']" position="inside">

                <div class="col-xs-12 col-md-6 o_setting_box" name="module_medical_clinical_procedure">
                    <div class="o_setting_left_pane" name="left">
                        <field name="module_medical_clinical_procedure"/>
                    </div>
                    <div class="o_setting_right_pane" name="right">
                        <label string="Procedures &amp; Procedure requests"
                               for="module_medical_clinical_procedure"/>
                        <div class="text-muted">
                            Allows to use Procedures and Procedure requests
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box" name="module_medical_clinical_careplan">
                    <div class="o_setting_left_pane" name="left">
                        <field name="module_medical_clinical_careplan"/>
                    </div>
                    <div class="o_setting_right_pane" name="right">
                        <label string="Care plans"
                               for="module_medical_clinical_careplan"/>
                        <div class="text-muted">
                            Allows to use Care plans
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box" name="module_medical_clinical_request_group">
                    <div class="o_setting_left_pane" name="left">
                        <field name="module_medical_clinical_request_group"/>
                    </div>
                    <div class="o_setting_right_pane" name="right">
                        <label string="Request groups"
                               for="module_medical_clinical_request_group"/>
                        <div class="text-muted">
                            Allows to use Request groups
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box" name="module_medical_clinical_condition">
                    <div class="o_setting_left_pane" name="left">
                        <field name="module_medical_clinical_condition"/>
                    </div>
                    <div class="o_setting_right_pane" name="right">
                        <label string="Medical Condition"
                               for="module_medical_clinical_condition"/>
                        <div class="text-muted">
                            Allows to use Medical condition
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
