<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.medical
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="medical_clinical.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='module_medical_clinical_careplan']/div[@name='right']"
                   position="inside">
                <div>
                    <field class="oe_inline" name="group_medical_careplan_add_plan_definition"/>
