<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_oemedical_secondary_condition_tree" model="ir.ui.view">
            <field name="name">oemedical.secondary_condition.tree</field>
            <field name="model">oemedical.secondary_condition</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Oemedical Secondary_Condition">
                    <field name="pathology"/>
                    <field name="evaluation"/>
                    <field name="comments"/>
                </tree>
            </field>
        </record>

        <record id="view_oemedical_secondary_condition_form" model="ir.ui.view">
            <field name="name">oemedical.secondary_condition.form</field>
            <field name="model">oemedical.secondary_condition</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Oemedical Secondary_Condition">
                    <field name="pathology"/>
                    <field name="evaluation"/>
                    <field name="comments"/>
                </form>
            </field>
        </record>

        <record id="view_oemedical_secondary_condition_search" model="ir.ui.view">
            <field name="name">oemedical.secondary_condition.search</field>
            <field name="model">oemedical.secondary_condition</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Oemedical Secondary_Condition">
                    <field name="pathology"/>
                    <field name="evaluation"/>
                    <field name="comments"/>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Pathology" domain="[]" context="{'group_by':'pathology'}"/>
                        <filter string="Evaluation" domain="[]" context="{'group_by':'evaluation'}"/>
                        <filter string="Comments" domain="[]" context="{'group_by':'comments'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_oemedical_secondary_condition_view">
            <field name="name"> Secondary Condition</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">oemedical.secondary_condition</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_oemedical_secondary_condition_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_oemedical_secondary_condition_view_form">
            <field name="act_window_id" ref="act_open_oemedical_secondary_condition_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_oemedical_secondary_condition_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_oemedical_secondary_condition_view_tree">
            <field name="act_window_id" ref="act_open_oemedical_secondary_condition_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_oemedical_secondary_condition_tree"/>
        </record>

    </data>
</openerp>
