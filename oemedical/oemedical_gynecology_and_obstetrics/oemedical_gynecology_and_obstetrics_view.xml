<!-- Include the Gynecological and Obstetric pages into the Patient History -->

        <record model="ir.ui.view" id="view_oemedical_patient_form_gyneco">
            <field name="name">oemedical.patient.view.inherit.gyneco</field>
            <field name="model">oemedical.patient</field>
            <field name="inherit_id" ref="oemedical.view_oemedical_patient_form" />
            <field name="type">form</field>
            <field name="arch" type="xml">
                <data>
                    <notebook position="inside">
                        <page string="Gyneco / Obs" >
                            <notebook>
                                <page string="Gyneco" >
                                    <group colspan="2" string="General">
                                        <field name="fertile"/>
                                        <field name="currently_pregnant"/>
                                        <field name="menarche"/>
                                        <field name="menopausal"/>
                                        <field name="menopause"/>
                                    </group>
                                    <group colspan="2" string="Prevention and Screening">
                                        <field name="breast_self_examination"/>
                                        <field name="mammography"/>
                                        <field name="mammography_last"/>
                                        <field name="pap_test"/>
                                        <field name="pap_test_last"/>
                                        <field name="colposcopy"/>
                                        <field name="colposcopy_last"/>
                                    </group>
                                </page>
                                <page string="Obstetric">
                                    <group colspan="2" string="Obstetric">
                                        <field name="gpa"/>
                                        <field name="gravida"/>
                                        <field name="full_term"/>
                                        <field name="born_alive"/>
                                        <field name="deaths_1st_week"/>
                                        <field name="premature"/>
                                        <field name="deaths_2nd_week"/>
                                        <field name="abortions"/>
                                    </group>
                                    <div>
                                        <H1>
                                            <label string="Perinatal Information"/>
                                        </H1>
                                    </div>
                                    <field name="perinatal">
                                        <tree string="Perinatal Information"  >      
                                            <field name="admission_code"/>
                                            <field name="gravida_number"/>
                                            <field name="admission_date"/>
                                            <field name="gestational_weeks"/>
                                        </tree>
                                        <form string="Perinatal Information"> 
                                            <field name="admission_date"/>
                                            <field name="dismissed"/>
                                            <field name="admission_code"/>
                                            <field name="gravida_number"/>
                                            <group colspan="4" col="6" string="Gestational period (weeks / days)" >
                                                <field name="gestational_days"/>
                                                <field name="prenatal_evaluations"/>
                                                <field name="abortion"/>
                                            </group>
                                            <group colspan="4" string="Monitoring">
                                                <field name="monitoring" colspan="4" nolabel="1">
                                                    <tree string="Monitoring">      
                                                        <field name="date"/>
                                                        <field name="systolic"/>
                                                        <field name="frequency"/>
                                                        <field name="fetus_position"/>
                                                        <field name="f_frequency"/>
                                                    </tree>
                                                    <form string="Monitoring"> 
                                                        <field name="date"/>
                                                        <label string="" colspan="2"/>
                                                        <field name="systolic"/>
                                                        <field name="diastolic"/>
                                                        <field name="frequency"/>
                                                        <label string="" colspan="2"/>
                                                        <field name="contractions"/>
                                                        <field name="dilation"/>
                                                        <field name="fundal_height"/>
                                                        <label string="" colspan="2"/>
                                                        <group colspan="4" col="4" string="Fetus" >
                                                            <field name="fetus_position" colspan="2"/>
                                                            <field name="f_frequency" colspan="2"/>
                                                        </group>
                                                        <group colspan="4" col="4" string="Complications">
                                                            <field name="bleeding" colspan="2"/>
                                                            <field name="meconium" colspan="2"/>
                                                        </group>
                                                    </form>
                                                </field>
                                            </group>
                                            <group colspan="4" col="4" string="Medications" >
                                                <field name="medication"  nolabel="1"  colspan="4"/>
                                            </group>
                                            <group colspan="4" string="Notes">
                                                <field name="notes" nolabel="1"/>
                                            </group>

                                        </form>
                                    </field>


                              </page>
                            </notebook>
                        </page>
                    </notebook>
                </data>
            </field>
        </record>
	</data>
</openerp>
