<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="view_oemedical_hospital_unit_tree" model="ir.ui.view">
			<field name="name">oemedical.hospital.unit.tree</field>
			<field name="model">oemedical.hospital.unit</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="Oemedical Hospital Unit">
					<field name="code" />
					<field name="institution" />
					<field name="name" />
					<field name="extra_info" />
				</tree>
			</field>
		</record>

		<record id="view_oemedical_hospital_unit_form" model="ir.ui.view">
			<field name="name">oemedical.hospital.unit.form</field>
			<field name="model">oemedical.hospital.unit</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="Oemedical Hospital Unit">
					<sheet>
                    <group colspan="4">
					<field name="code" />
					<field name="institution" />
					<field name="name" />
					<field name="extra_info" />
					</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_oemedical_hospital_unit_search" model="ir.ui.view">
			<field name="name">oemedical.hospital.unit.search</field>
			<field name="model">oemedical.hospital.unit</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="Oemedical Hospital Unit">
					<field name="code" />
					<field name="institution" />
					<field name="name" />
					<field name="extra_info" />
					<newline />
					<group expand="0" string="Group By...">
						<filter string="Code" domain="[]" context="{'group_by':'code'}" />
						<filter string="Institution" domain="[]"
							context="{'group_by':'institution'}" />
						<filter string="Name" domain="[]" context="{'group_by':'name'}" />
						<filter string="Extra Info" domain="[]"
							context="{'group_by':'extra_info'}" />
					</group>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="act_open_oemedical_hospital_unit_view">
			<field name="name">Hospital Unit</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">oemedical.hospital.unit</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_oemedical_hospital_unit_search" />
			<field name="domain">[]</field>
			<field name="context">{}</field>
		</record>

		<record model="ir.actions.act_window.view" id="act_open_oemedical_hospital_unit_view_form">
			<field name="act_window_id" ref="act_open_oemedical_hospital_unit_view" />
			<field name="sequence" eval="20" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_oemedical_hospital_unit_form" />
		</record>

		<record model="ir.actions.act_window.view" id="act_open_oemedical_hospital_unit_view_tree">
			<field name="act_window_id" ref="act_open_oemedical_hospital_unit_view" />
			<field name="sequence" eval="10" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_oemedical_hospital_unit_tree" />
		</record>

	</data>
</openerp>
