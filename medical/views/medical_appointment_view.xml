<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="view_medical_appointment_tree" model="ir.ui.view">
			<field name="name">medical.appointment.tree</field>
			<field name="model">medical.appointment</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="Medical Appointment" colors="grey:stage_id=='Canceled';green:stage_id=='Draft';blue:stage_id in ('Done');red:stage_id in ('Waiting','Unavailable')">
					<field name="name" />
					<field name="patient_id" />
   					<field name="alias" />
					<field name="appointment_date" />
					<field name="physician_id" />
					<field name="appointment_type" />
					<field name="institution_id" />
					<field name="urgency" />
					<field name="specialty" />
					<field name="stage_id" />
				</tree>
			</field>
		</record>

		<record id="view_medical_appointment_form" model="ir.ui.view">
			<field name="name">medical.appointment.form</field>
			<field name="model">medical.appointment</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="Oemedical Appointment"  version="7.0">
                    <header>
	                    <field name="stage_id" widget="statusbar" clickable="True"
	                            options="{'fold_field': 'fold'}" 
	                             />
                    </header>
                    <sheet>
                        <h1>
                            <label string="Appointment"/>
				            <field name="name"/>
                        </h1>
                        <group col="4" colspan="4">
                            <field name="patient_id" on_change="onchange_patient_id(patient_id)"/>
                            <field name="alias" />
                            <field name="appointment_type" />
			                <field name="urgency" />
                        </group>
                        <notebook>
                            <page string="Main">
                                <group >
                                    <group> 
					                    <field name="physician_id" />
                                        <field name="institution_id" />
					                    <field name="specialty" />
					                </group>
                                    <group>
						                <field name="consultations" />
					                    <field name="appointment_date"/>
                                        <field name="duration" widget="float_time"/>
                                    </group>
                                </group>
                                <group col="4" colspan="4" string="Notes">
					                <field name="comments" colspan="4" nolabel="1"/>
                                </group>
                            </page>
                            <page string="History">
                                <field name="history_ids" nolabel="1">
                                    <tree string="History">
    					                <field name="date" />
    					                <field name="name" />
    					                <field name="action" />
                                    </tree>
                                    <form String="History">
	    				                <field name="name" />
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
				</form>
			</field>
		</record>

        <record id="view_medical_appointment_calendar" model="ir.ui.view">
            <field name="name">medical.appointment.calendar</field>
            <field name="model">medical.appointment</field>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <calendar color="physician_id" date_start="appointment_date" date_stop="date_end" string="Calendar View" mode="week" >
                    <field name="patient_id"/>
                    <field name="physician_id"/>
                    <field name="duration"/>
                </calendar>
            </field>
        </record>

		<record id="view_medical_appointment_search" model="ir.ui.view">
			<field name="name">medical.appointment.search</field>
			<field name="model">medical.appointment</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="Oemedical Appointment">
					<field name="name" />
					<field name="patient_id" />
					<field name="physician_id" />
					<field name="appointment_date" />
					<field name="appointment_type" />
					<field name="urgency" />
					<field name="consultations" />
					<field name="institution_id" />
					<field name="specialty" />
					<newline />
					<group expand="0" string="Group By...">
						<filter string="Consultation Services" domain="[]"
							context="{'group_by':'consultations'}" />
						<filter string="Patient" domain="[]" context="{'group_by':'patient_id'}" />
						<filter string="Appointment ID" domain="[]"
							context="{'group_by':'name'}" />
						<filter string="Date and Time" domain="[]"
							context="{'group_by':'appointment_date'}" />
						<filter string="Physician" domain="[]" context="{'group_by':'physician_id'}" />
						<filter string="Comments" domain="[]" context="{'group_by':'comments'}" />
						<filter string="Health Center" domain="[]"
							context="{'group_by':'institution_id'}" />
						<filter string="Specialty" domain="[]"
							context="{'group_by':'specialty'}" />
					</group>
				</search>
			</field>
		</record>

        <record model="ir.ui.view" id="view_medical_appointment_kanban">
            <field name="name">medical.appointement.kanban</field>
            <field name="model">medical.appointment</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban version="7.0" class="oe_background_grey" default_group_by="stage_id">
                    <field name="stage_id"/>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_vignette oe_semantic_html_override">
                                    <div class="oe_kanban_details">
                                        <h3>
                                            <a type="open"><field name="name"/></a>
                                        </h3>
                                        <ul>
                                            <li t-if="record.patient_id.raw_value"><b>Patient:</b> <field name="patient_id"/></li>
                                            <li t-if="record.physician_id.raw_value"><b>Physician:</b> <field name="physician_id"/></li>
                                            <li t-if="record.duration.raw_value"><b>Duration:</b> <field name="duration"/></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

		<record model="ir.actions.act_window" id="act_open_medical_appointment_view">
			<field name="name">Appointment</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">medical.appointment</field>
			<field name="view_type">form</field>
			<field name="view_mode">kanban,tree,form,calendar</field>
			<field name="search_view_id" ref="view_medical_appointment_search" />
			<field name="context">{}</field>
		</record>
			<!-- field name="domain">['|',('patient_id.user_id.id','=',uid),('doctor.user_id.id','=',uid)]</field -->
		
		<record model="ir.actions.act_window.view" id="act_open_medical_appointment_view_form">
			<field name="act_window_id" ref="act_open_medical_appointment_view" />
			<field name="sequence" eval="40" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_medical_appointment_form" />
		</record>

		<record model="ir.actions.act_window.view" id="act_open_medical_appointment_view_tree">
			<field name="act_window_id" ref="act_open_medical_appointment_view" />
			<field name="sequence" eval="30" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_medical_appointment_tree" />
		</record>

		<record model="ir.actions.act_window.view" id="act_open_medical_appointment_view_calendar">
			<field name="act_window_id" ref="act_open_medical_appointment_view" />
			<field name="sequence" eval="20" />
			<field name="view_mode">calendar</field>
			<field name="view_id" ref="view_medical_appointment_calendar" />
		</record>
 		<record model="ir.actions.act_window.view" id="act_open_medical_appointment_view_kanban"> 
 			<field name="act_window_id" ref="act_open_medical_appointment_view" /> 
 			<field name="sequence" eval="10" /> 
 			<field name="view_mode">kanban</field> 
 			<field name="view_id" ref="view_medical_appointment_kanban" /> 
 		</record> 

	</data>
</openerp>
