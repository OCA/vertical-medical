<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_medical_physician_tree" model="ir.ui.view">
            <field name="name">medical.physician.tree</field>
            <field name="model">medical.physician</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Medical Physician">
                    <field name="name" />
                    <field name="code" />
                    <field name="specialty" />
                    <field name="parent_id" />
                </tree>
            </field>
        </record>

        <record id="view_medical_physician_form" model="ir.ui.view">
            <field name="name">medical.physician.form</field>
            <field name="model">medical.physician</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Medical Physician" >
                    <header/>
                    <sheet>
                        <div class="oe_title" name="title">
                            <field name="image" widget='image' class="left avatar"/>
                            <h1><field name="name" placeholder="First Name Last Name" /></h1>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons">
                        </div>
                        <group name="data">
                            <group name="main">
                                <field name="specialty"/>
                                <field name="ref"/>
                                <field name="code"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="info"/>
                            </page>
                            <page string="General Information"> 
                                <group string="Contact Information">
                                    <group>
                                        <label for="street" string="Address"/>
                                        <div>
                                            <field name="use_parent_address" class="edit_only inline" invisible="1"/>
                                            <label for="use_parent_address" class="edit_only" invisible="1"/>
                                            <field name="street" placeholder="Street..." />
                                            <field name="street2" />
                                            <div class="address_format">
                                                <field name="city" placeholder="City" style="width: 40%" />
                                                <field name="state_id" class="no_button" placeholder="State" style="width: 37%" options='{"no_open": True}' />
                                                <field name="zip" placeholder="ZIP" style="width: 20%" />
                                            </div>
                                            <field name="country_id" placeholder="Country" class="no_button" options='{"no_open": True}' />
                                        </div>
                                        <field name="website" widget="url" placeholder="e.g. www.openerp.com"/>
                                    </group>
                                    <group>
                                        <field name="phone" placeholder="e.g. +32.81.81.37.00"/>
                                        <field name="mobile"/>
                                        <field name="fax"/>
                                        <field name="email" widget="email"/>
                                    </group>
                                </group>
                                <group  col="4" colspan="4"> 
                                    <field name="parent_id" colspan="2" string="Legal Representative" domain="[('is_patient','=',True)]"/>
                                </group>
                                <group  col="4" colspan="4"> 
                                     <field name="lang" colspan="2"/>
                                     <field name="opt_out" string="I don't want to receive comercial messages" colspan="2"/>
                                 </group>
                            </page>
                        </notebook>
                     </sheet>
                </form>
            </field>
        </record>

        <record id="view_medical_physician_search" model="ir.ui.view">
            <field name="name">medical.physician.search</field>
            <field name="model">medical.physician</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Medical Physician">
                    <field name="name" />
                    <field name="code" />
                    <field name="specialty" />
                    <field name="parent_id" />
                    <field name="info" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Extra info" domain="[]" context="{'group_by':'info'}" />
                        <filter string="Name" domain="[]" context="{'group_by':'name'}" />
                        <filter string="ID" domain="[]" context="{'group_by':'code'}" />
                        <filter string="Specialty" domain="[]"    context="{'group_by':'specialty'}" />
                        <filter string="Institution" domain="[]" context="{'group_by':'parent_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_medical_physician_view_self">
            <field name="name">Physician</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.physician</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_medical_physician_search" />
            <field name="domain">[('user_id', '=', uid)]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window" id="act_open_medical_physician_view">
            <field name="name">Physician</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.physician</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_medical_physician_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_medical_physician_view_form">
            <field name="act_window_id" ref="act_open_medical_physician_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_medical_physician_form" />
        </record>

        <record model="ir.actions.act_window.view" id="act_open_medical_physician_view_tree">
            <field name="act_window_id" ref="act_open_medical_physician_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_medical_physician_tree" />
        </record>

    </data>
</openerp>