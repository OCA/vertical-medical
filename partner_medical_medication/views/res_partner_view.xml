<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">Partner Form View - Medication Smart Button</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="medical_patient_ids" invisible="True"/>
                <button  
                    name="partner_medical_medication.partner_action_medication" type="action" 
                    class="oe_stat_button" icon="fa-list"
                    attrs="{'invisible': [('medical_patient_ids', '=', [])]}">
                    <span>Medications</span>
                </button>
            </xpath>
        </field>
    </record>

    <record id="partner_action_medication" model="ir.actions.act_window">
        <field name="name">Partner Medications</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">medical.patient.medication</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree, form</field>
        <field name="domain">[('patient_id.partner_id', 'child_of', active_id)]</field>
    </record>
</odoo>
