<odoo>

    <record model="ir.ui.view" id="medical_request_group_tree">
        <field name="name">medical.request.group.tree</field>
        <field name="model">medical.request.group</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="medical_request_group_form">
        <field name="name">medical.request.group.form</field>
        <field name="model">medical.request.group</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <form string="Request Group">
                <header>
                </header>
                <sheet>
                    <group>
                        <group name="details">
                            <field name="name"/>
                            <field name="patient_id"/>
                        </group>
                        <group name="sale">
                            <field name="service_id"/>
                            <field name="center_id"/>
                        </group>
                    </group>
                    <group name="pricelist">
                    </group>
                    <group name="insurance" string="Insurance Authorization">
                    </group>
                    <notebook>
                        <page string="Procedure Requests"
                              name='procedure_requests'>
                        </page>
                        <page string="Material Requests"
                              name='material_requests'>
                        </page>
                        <page string="Request Groups"
                              name='request_groups'>
                        </page>
                        <page string="Notes and Messages" name="messages">
                            <div class="oe_chatter">
                                <field name="message_follower_ids" widget="mail_followers"/>
                                <field name="message_ids" widget="mail_thread"/>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window"
            id="medical_request_group_window_action">
        <field name="name">Request Group</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">medical.request.group</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

</odoo>
