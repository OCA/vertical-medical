<odoo>

    <record id="group_medical_medication_request_display" model="res.groups">
        <field name="name">Medication Request Display</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(4, ref('medical_medication.group_medical_medication_display')), (4, ref('medical_clinical.group_medical_view_requests'))]"/>
    </record>

    <record id="group_medical_medication_request_manager" model="res.groups">
        <field name="name">Medication Request Manager</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(4, ref('group_medical_medication_request_display'))]"/>
    </record>

    <record id="group_medical_medication_administration_display" model="res.groups">
        <field name="name">Medication Administration Display</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(4, ref('group_medical_medication_request_display')), (4, ref('medical_clinical.group_medical_view_requests')), (4, ref('medical_administration_location.group_medical_location_display'))]"/>
    </record>

    <record id="group_medical_medication_administration_manager" model="res.groups">
        <field name="name">Medication Administration Manager</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(4, ref('group_medical_medication_administration_display'))]"/>
    </record>

    <record id="medical_clinical.group_medical_view_requests" model="res.groups">
        <field name="implied_ids"
               eval="[(4, ref('group_medical_medication_request_display')), (4, ref('medical_administration_practitioner.group_medical_practitioner_display'))]"/>
    </record>

    <!-- Generic groups -->

    <record id="medical_base.group_medical_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_medical_medication_request_display')), (4, ref('group_medical_medication_administration_display'))]"/>
    </record>

    <record id="medical_base.group_medical_configurator" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_medical_medication_request_manager')), (4, ref('group_medical_medication_administration_manager'))]"/>
    </record>

</odoo>
