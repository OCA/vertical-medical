<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.medical
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id"
               ref="medical_base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='medical_administration']"
                   position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box" name="module_medical_administration_practitioner">
                    <div class="o_setting_left_pane" name="left">
                        <field name="module_medical_administration_practitioner"/>
                    </div>
                    <div class="o_setting_right_pane" name="right">
                        <label string="Practitioner"
                               for="module_medical_administration_practitioner"/>
                        <div class="text-muted">
                            Activates practitioner
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box" name="module_medical_administration_location">
                    <div class="o_setting_left_pane" name="left">
                        <field name="module_medical_administration_location"/>
                    </div>
                    <div class="o_setting_right_pane" name="right">
                        <label string="Locations"
                               for="module_medical_administration_location"/>
                        <div class="text-muted">
                            Activates locations
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box" name="module_medical_administration_encounter">
                    <div class="o_setting_left_pane" name="left">
                        <field name="module_medical_administration_encounter"/>
                    </div>
                    <div class="o_setting_right_pane" name="right">
                        <label string="Encounters"
                               for="module_medical_administration_encounter"/>
                        <div class="text-muted">
                            Activates encounters
                        </div>
                        <div>
                            <field class="oe_inline" name="module_medical_administration_encounter_careplan"/>
                            Link encounters with care plans
                        </div>
                    </div>
                </div>
            </xpath>
            <field name="module_medical_administration" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
        </field>
    </record>

</odoo>
