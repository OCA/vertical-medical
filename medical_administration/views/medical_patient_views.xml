<odoo>

    <record model="ir.ui.view" id="medical_patient_tree">
        <field name="name">medical.patient.tree</field>
        <field name="model">medical.patient</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="medical_abstract_partner_tree"/>
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="string">Patients</attribute>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="medical_patient_form">
        <field name="name">medical.patient.tree</field>
        <field name="model">medical.patient</field>
        <field name="inherit_id" ref="medical_abstract_partner_form"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="string">Patient</attribute>
            </form>
            <page name="internal_notes" position="before">
                <page name="medical_administration" string="Administration data">
                    <group>
                        <group id="medical_administration_info">
                            <field name="gender"/>
                            <field name="marital_status"/>
                        </group>
                        <group id="medical_administration_date">
                            <field name="birth_date"/>
                            <field name="deceased_date"/>
                        </group>
                    </group>
                </page>
            </page>
        </field>
    </record>

    <record model="ir.ui.view" id="medical_patient_kanban">
        <field name="name">medical.patient.kanban</field>
        <field name="model">medical.patient</field>
        <field name="inherit_id" ref="medical_abstract_partner_kanban"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <kanban position="attributes">
                <attribute name="string">Patients</attribute>
            </kanban>
        </field>
    </record>

    <record model="ir.actions.act_window"
            id="medical_patient_window_action">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">medical.patient</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'default_company_type': 'person'}</field>
    </record>

    <menuitem id="medical_patient"
              name="Patients"
              parent="medical_base.medical_root_administration"
              sequence="10"
              action="medical_patient_window_action"/>
</odoo>
