<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="medical_signs_view_and_symptoms_tree" model="ir.ui.view">
			<field name="name">medical.signs_and_symptoms.tree</field>
			<field name="model">medical.signs_and_symptoms</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="Medical Signs_And_Symptoms">
					<field name="clinical_id" />
					<field name="evaluation_id" />
					<!--field name="sign_or_symptom"/ -->
					<field name="comments" />
				</tree>
			</field>
		</record>

		<record id="medical_signs_view_and_symptoms_form" model="ir.ui.view">
			<field name="name">medical.signs_and_symptoms.form</field>
			<field name="model">medical.signs_and_symptoms</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="Medical Signs_And_Symptoms">
					<field name="clinical_id" />
					<field name="evaluation_id" />
					<!--field name="sign_or_symptom"/ -->
					<field name="comments" />
				</form>
			</field>
		</record>

		<record id="medical_signs_view_and_symptoms_search" model="ir.ui.view">
			<field name="name">medical.signs_and_symptoms.search</field>
			<field name="model">medical.signs_and_symptoms</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="Medical Signs_And_Symptoms">
					<field name="clinical_id" />
					<field name="evaluation_id" />
					<field name="comments" />
					<newline />
					<group expand="0" string="Group By...">
						<filter string="Sign or Symptom" domain="[]"
							context="{'group_by':'clinical_id'}" />
						<filter string="Evaluation" domain="[]"
							context="{'group_by':'evaluation_id'}" />
						<filter string="Comments" domain="[]" context="{'group_by':'comments'}" />
					</group>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="medical_signs_and_symptoms_action">
			<field name="name">Signs And Symptoms</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">medical.signs_and_symptoms</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="medical_signs_view_and_symptoms_search" />
			<field name="domain">[]</field>
			<field name="context">{}</field>
		</record>

		<record model="ir.actions.act_window.view" id="medical_signs_and_symptoms_action_form">
			<field name="act_window_id" ref="medical_signs_and_symptoms_action" />
			<field name="sequence" eval="20" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="medical_signs_view_and_symptoms_form" />
		</record>

		<record model="ir.actions.act_window.view" id="medical_signs_and_symptoms_action_tree">
			<field name="act_window_id" ref="medical_signs_and_symptoms_action" />
			<field name="sequence" eval="10" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="medical_signs_view_and_symptoms_tree" />
		</record>

	</data>
</openerp>