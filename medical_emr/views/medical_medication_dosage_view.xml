<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="medical_medication_view_dosage_tree" model="ir.ui.view">
			<field name="name">medical.medication.dosage.tree</field>
			<field name="model">medical.medication.dosage</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="Medical Medication Dosage">
					<field name="abbreviation" />
					<field name="code" />
					<field name="name" />
				</tree>
			</field>
		</record>

		<record id="medical_medication_view_dosage_form" model="ir.ui.view">
			<field name="name">medical.medication.dosage.form</field>
			<field name="model">medical.medication.dosage</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="Medical Medication Dosage">
					<field name="abbreviation" />
					<field name="code" />
					<field name="name" />
				</form>
			</field>
		</record>

		<record id="medical_medication_view_dosage_search" model="ir.ui.view">
			<field name="name">medical.medication.dosage.search</field>
			<field name="model">medical.medication.dosage</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="Medical Medication Dosage">
					<field name="abbreviation" />
					<field name="code" />
					<field name="name" />
					<newline />
					<group expand="0" string="Group By...">
						<filter string="Abbreviation" domain="[]"
							context="{'group_by':'abbreviation'}" />
						<filter string="Code" domain="[]" context="{'group_by':'code'}" />
						<filter string="Frequency" domain="[]" context="{'group_by':'name'}" />
					</group>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="medical_medication_dosage_action">
			<field name="name">Medication Dosage</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">medical.medication.dosage</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="medical_medication_view_dosage_search" />
			<field name="domain">[]</field>
			<field name="context">{}</field>
		</record>

		<record model="ir.actions.act_window.view" id="medical_medication_dosage_action_form">
			<field name="act_window_id" ref="medical_medication_dosage_action" />
			<field name="sequence" eval="20" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="medical_medication_view_dosage_form" />
		</record>

		<record model="ir.actions.act_window.view" id="medical_medication_dosage_action_tree">
			<field name="act_window_id" ref="medical_medication_dosage_action" />
			<field name="sequence" eval="10" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="medical_medication_view_dosage_tree" />
		</record>


	</data>
</openerp>