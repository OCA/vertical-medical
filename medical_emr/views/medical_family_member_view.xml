<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="medical_family_view_member_tree" model="ir.ui.view">
			<field name="name">medical.family_member.tree</field>
			<field name="model">medical.family_member</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="Medical Family_Member">
					<field name="family_id" />
					<field name="role" />
					<field name="member_id" />
				</tree>
			</field>
		</record>

		<record id="medical_family_view_member_form" model="ir.ui.view">
			<field name="name">medical.family_member.form</field>
			<field name="model">medical.family_member</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="Medical Family_Member">
					<field name="family_id" colspan="4"/>
					<field name="role" colspan="4"/>
					<field name="member_id" colspan="4"/>
				</form>
			</field>
		</record>

		<record id="medical_family_view_member_search" model="ir.ui.view">
			<field name="name">medical.family_member.search</field>
			<field name="model">medical.family_member</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="Medical Family_Member">
					<field name="role" />
					<field name="member_id" />
					<field name="family_id" />
					<newline />
					<group expand="0" string="Group By...">
						<filter string="Party" domain="[]" context="{'group_by':'member_id'}" />
						<filter string="Role" domain="[]" context="{'group_by':'role'}" />
						<filter string="Family" domain="[]" context="{'group_by':'family_id'}" />
					</group>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="medical_family_member_action">
			<field name="name">Family Member</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">medical.family_member</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="medical_family_view_member_search" />
			<field name="domain">[]</field>
			<field name="context">{}</field>
		</record>

		<record model="ir.actions.act_window.view" id="medical_family_member_action_form">
			<field name="act_window_id" ref="medical_family_member_action" />
			<field name="sequence" eval="20" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="medical_family_view_member_form" />
		</record>

		<record model="ir.actions.act_window.view" id="medical_family_member_action_tree">
			<field name="act_window_id" ref="medical_family_member_action" />
			<field name="sequence" eval="10" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="medical_family_view_member_tree" />
		</record>

	</data>
</openerp>