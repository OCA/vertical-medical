<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="view_medical_directions_tree" model="ir.ui.view">
			<field name="name">medical.directions.tree</field>
			<field name="model">medical.directions</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="Medical Directions">
					<field name="evaluation_id" />
					<field name="procedure_id" />
					<field name="comments" />
				</tree>
			</field>
		</record>

		<record id="view_medical_directions_form" model="ir.ui.view">
			<field name="name">medical.directions.form</field>
			<field name="model">medical.directions</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="Medical Directions">
					<field name="procedure_id" />
					<field name="evaluation_id" />
					<field name="comments" />
				</form>
			</field>
		</record>

		<record id="view_medical_directions_search" model="ir.ui.view">
			<field name="name">medical.directions.search</field>
			<field name="model">medical.directions</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="Medical Directions">
					<field name="procedure_id" />
					<field name="evaluation_id" />
					<field name="comments" />
					<newline />
					<group expand="0" string="Group By...">
						<filter string="Procedure" domain="[]"
							context="{'group_by':'procedure_id'}" />
						<filter string="Evaluation" domain="[]"
							context="{'group_by':'evaluation_id'}" />
						<filter string="Comments" domain="[]" context="{'group_by':'comments'}" />
					</group>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="act_open_medical_directions_view">
			<field name="name">Directions</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">medical.directions</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_medical_directions_search" />
			<field name="domain">[]</field>
			<field name="context">{}</field>
		</record>

		<record model="ir.actions.act_window.view" id="act_open_medical_directions_view_form">
			<field name="act_window_id" ref="act_open_medical_directions_view" />
			<field name="sequence" eval="20" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_medical_directions_form" />
		</record>

		<record model="ir.actions.act_window.view" id="act_open_medical_directions_view_tree">
			<field name="act_window_id" ref="act_open_medical_directions_view" />
			<field name="sequence" eval="10" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_medical_directions_tree" />
		</record>

	</data>
</openerp>