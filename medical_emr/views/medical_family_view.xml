<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_medical_family_tree" model="ir.ui.view">
            <field name="name">medical.family.tree</field>
            <field name="model">medical.family</field>
            <field name="arch" type="xml">
                <tree string="Medical Families">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="view_medical_family_form" model="ir.ui.view">
            <field name="name">medical.family.form</field>
            <field name="model">medical.family</field>
            <field name="arch" type="xml">
                <form string="Medical Family">
                    <header></header>
                    <sheet>
                        <div class="oe_title" name="title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" /></h1>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons"></div>

                        <notebook>
                            <page string="Members" name="members">
                                <field name="members" context="{'default_family_id': active_id}">
                                    <tree editable="bottom">
                                        <field name="role" />
                                        <field name="member" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Info" name="info">
                                <field name="info" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_medical_family_search" model="ir.ui.view">
            <field name="name">medical.family.search</field>
            <field name="model">medical.family</field>
            <field name="arch" type="xml">
                <search string="Medical Families">
                    <field name="name" />
                    <field name="info" />
                </search>
            </field>
        </record>

        <record id="act_open_medical_family_view" model="ir.actions.act_window">
            <field name="name">Families</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.family</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_medical_family_tree" />
            <field name="search_view_id" ref="view_medical_family_search" />
        </record>

    </data>
</openerp>
