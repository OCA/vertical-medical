<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="view_medical_family_tree" model="ir.ui.view">
			<field name="name">medical.family.tree</field>
			<field name="model">medical.family</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="Oemedical Family">
					<field name="name" />
					<!--TBD field name="operational_sector" /-->
				</tree>
			</field>
		</record>

		<record id="view_medical_family_form" model="ir.ui.view">
			<field name="name">medical.family.form</field>
			<field name="model">medical.family</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="Oemedical Family" version="7.0">
                    <sheet>
                        <H1>
                            <label string="Family: "/>
        					<field name="name" />
                        </H1>
                        <notebook>
                            <page string="Main">
                                <group>
					                <!--field name="operational_sector" >
                                            <tree>
                            					<field name="name" />
                            					<field name="operational_area_id" />
                                            </tree>
                                            <form>
                            					<field name="name" />
                            					<field name="operational_area_id" />
                                                <group colspan="4" string="Extra Infomation">
                                					<field name="info"  />
                                                </group>
                                            </form>
                                    </field-->
                                </group>
                                <group colspan="4" col="4" string="Members">
                					<field name="members" colspan="4" nolabel="1">
                                        <tree>
                        					<field name="role" />
                        					<field name="member" />
                        					<field name="family_id" />
                                        </tree>
                                        <form>
                        					<field name="role" />
                        					<field name="member" />
                                        </form>
                                    </field>
                                </group>
                            </page>
                            <page string="Info">
                                <group colspan="4" col="4" string="Info">
                					<field name="info" colspan="4" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
				</form>
			</field>
		</record>

		<record id="view_medical_family_search" model="ir.ui.view">
			<field name="name">medical.family.search</field>
			<field name="model">medical.family</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="Oemedical Family">
					<field name="info" />
					<!-- TBD field name="operational_sector" /-->
					<field name="name" />
					<newline />
					<group expand="0" string="Group By...">
						<!-- TBD filter string="Operational Sector" domain="[]"
							context="{'group_by':'operational_sector'}" /-->
						<filter string="Family" domain="[]" context="{'group_by':'name'}" />
					</group>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="act_open_medical_family_view">
			<field name="name">Family</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">medical.family</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_medical_family_search" />
			<field name="domain">[]</field>
			<field name="context">{}</field>
		</record>

		<record model="ir.actions.act_window.view" id="act_open_medical_family_view_form">
			<field name="act_window_id" ref="act_open_medical_family_view" />
			<field name="sequence" eval="20" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_medical_family_form" />
		</record>

		<record model="ir.actions.act_window.view" id="act_open_medical_family_view_tree">
			<field name="act_window_id" ref="act_open_medical_family_view" />
			<field name="sequence" eval="10" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_medical_family_tree" />
		</record>

	</data>
</openerp>
