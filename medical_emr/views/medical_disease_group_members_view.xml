<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="medical_disease_view_group_members_search" model="ir.ui.view">
            <field name="name">medical.disease_group.members.search</field>
            <field name="model">medical.disease_group.members</field>
            <field name="arch" type="xml">
                <search string="Medical Disease_Group Members">
                    <field name="name" />
                    <field name="disease_group_id" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Group" domain="[]"
                            context="{'group_by':'disease_group'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="medical_disease_view_group_members_tree" model="ir.ui.view">
            <field name="name">medical.disease_group.members.tree</field>
            <field name="model">medical.disease_group.members</field>
            <field name="arch" type="xml">
                <tree string="Medical Disease_Group Members">
                    <field name="name" />
                    <field name="disease_group_id" />
                </tree>
            </field>
        </record>

        <record id="medical_disease_view_group_members_form" model="ir.ui.view">
            <field name="name">medical.disease_group.members.form</field>
            <field name="model">medical.disease_group.members</field>
            <field name="arch" type="xml">
                <form string="Medical Disease_Group Members">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title" name="title">
                            <h1><field name="name" placeholder="Name" /></h1>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons">
                        </div>

                        <group name="data">
                            <group name="main">
                                <field name="disease_group_id" />
                            </group>
                        </group>

                        <notebook>
                        </notebook>
                    </sheet>
                    <div name="configurator" class="oe_form_sheetbg" groups="medical.group_medical_configurator">
                        <div class="oe_formview oe_form_sheet_width">
                            <h3>More Info</h3>
                            <group name="moreinfo">
                                <field name="id"/>
                            </group>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="medical_disease_group_members_action">
            <field name="name">Disease Group Members</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.disease_group.members</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="medical_disease_view_group_members_form" />
            <field name="search_view_id" ref="medical_disease_view_group_members_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

    </data>
</openerp>
