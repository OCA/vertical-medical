<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="view_medical_drug_route_tree" model="ir.ui.view">
			<field name="name">medical.drug.route.tree</field>
			<field name="model">medical.drug.route</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="Medical Drug Route">
					<field name="code" />
					<field name="name" />
				</tree>
			</field>
		</record>

		<record id="view_medical_drug_route_form" model="ir.ui.view">
			<field name="name">medical.drug.route.form</field>
			<field name="model">medical.drug.route</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="Medical Drug Route">
					<field name="code" />
					<field name="name" />
				</form>
			</field>
		</record>

		<record id="view_medical_drug_route_search" model="ir.ui.view">
			<field name="name">medical.drug.route.search</field>
			<field name="model">medical.drug.route</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="Medical Drug Route">
					<field name="code" />
					<field name="name" />
					<newline />
					<group expand="0" string="Group By...">
						<filter string="Code" domain="[]" context="{'group_by':'code'}" />
						<filter string="Unit" domain="[]" context="{'group_by':'name'}" />
					</group>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="act_open_medical_drug_route_view">
			<field name="name">Drug Route</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">medical.drug.route</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_medical_drug_route_search" />
			<field name="domain">[]</field>
			<field name="context">{}</field>
		</record>

		<record model="ir.actions.act_window.view" id="act_open_medical_drug_route_view_form">
			<field name="act_window_id" ref="act_open_medical_drug_route_view" />
			<field name="sequence" eval="20" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_medical_drug_route_form" />
		</record>

		<record model="ir.actions.act_window.view" id="act_open_medical_drug_route_view_tree">
			<field name="act_window_id" ref="act_open_medical_drug_route_view" />
			<field name="sequence" eval="10" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_medical_drug_route_tree" />
		</record>

	</data>
</openerp>