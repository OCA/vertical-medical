<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="medical_medicament_view_category_tree" model="ir.ui.view">
			<field name="name">medical.medicament.category.tree</field>
			<field name="model">medical.medicament.category</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="Medical Medicament Category">
					<field name="child_ids" />
					<field name="name" />
					<field name="parent_id" />
				</tree>
			</field>
		</record>

		<record id="medical_medicament_view_category_form" model="ir.ui.view">
			<field name="name">medical.medicament.category.form</field>
			<field name="model">medical.medicament.category</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="Medical Medicament Category">
					<field name="child_ids" />
					<field name="name" />
					<field name="parent_id" />
				</form>
			</field>
		</record>

		<record id="medical_medicament_view_category_search" model="ir.ui.view">
			<field name="name">medical.medicament.category.search</field>
			<field name="model">medical.medicament.category</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="Medical Medicament Category">
					<field name="name" />
					<field name="parent_id" />
					<newline />
					<group expand="0" string="Group By...">
						<filter string="Name" domain="[]" context="{'group_by':'name'}" />
						<filter string="Parent" domain="[]" context="{'group_by':'parent_id'}" />
					</group>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="medical_medicament_category_action">
			<field name="name">Medicament Category</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">medical.medicament.category</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="medical_medicament_view_category_search" />
			<field name="domain">[]</field>
			<field name="context">{}</field>
		</record>

		<record model="ir.actions.act_window.view"
			id="medical_medicament_category_action_form">
			<field name="act_window_id" ref="medical_medicament_category_action" />
			<field name="sequence" eval="20" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="medical_medicament_view_category_form" />
		</record>

		<record model="ir.actions.act_window.view"
			id="medical_medicament_category_action_tree">
			<field name="act_window_id" ref="medical_medicament_category_action" />
			<field name="sequence" eval="10" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="medical_medicament_view_category_tree" />
		</record>

	</data>
</openerp>