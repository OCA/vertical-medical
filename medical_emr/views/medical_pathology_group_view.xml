<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="view_medical_pathology_group_tree" model="ir.ui.view">
			<field name="name">medical.pathology.group.tree</field>
			<field name="model">medical.pathology.group</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="Oemedical Pathology Group">
					<field name="info" />
					<field name="code" />
					<field name="name" />
					<field name="desc" />
				</tree>
			</field>
		</record>

		<record id="view_medical_pathology_group_form" model="ir.ui.view">
			<field name="name">medical.pathology.group.form</field>
			<field name="model">medical.pathology.group</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="Oemedical Pathology Group">
					<field name="info" />
					<field name="code" />
					<field name="name" />
					<field name="desc" />
				</form>
			</field>
		</record>

		<record id="view_medical_pathology_group_search" model="ir.ui.view">
			<field name="name">medical.pathology.group.search</field>
			<field name="model">medical.pathology.group</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="Oemedical Pathology Group">
					<field name="info" />
					<field name="code" />
					<field name="name" />
					<field name="desc" />
					<newline />
					<group expand="0" string="Group By...">
						<filter string="Detailed information" domain="[]"
							context="{'group_by':'info'}" />
						<filter string="Code" domain="[]" context="{'group_by':'code'}" />
						<filter string="Name" domain="[]" context="{'group_by':'name'}" />
						<filter string="Short Description" domain="[]"
							context="{'group_by':'desc'}" />
					</group>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="act_open_medical_pathology_group_view">
			<field name="name">Pathology Group</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">medical.pathology.group</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_medical_pathology_group_search" />
			<field name="domain">[]</field>
			<field name="context">{}</field>
		</record>

		<record model="ir.actions.act_window.view" id="act_open_medical_pathology_group_view_form">
			<field name="act_window_id" ref="act_open_medical_pathology_group_view" />
			<field name="sequence" eval="20" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_medical_pathology_group_form" />
		</record>

		<record model="ir.actions.act_window.view" id="act_open_medical_pathology_group_view_tree">
			<field name="act_window_id" ref="act_open_medical_pathology_group_view" />
			<field name="sequence" eval="10" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_medical_pathology_group_tree" />
		</record>

	</data>
</openerp>
