<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="view_medical_prescription_line_tree" model="ir.ui.view">
			<field name="name">medical.prescription.line.tree</field>
			<field name="model">medical.prescription.line</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="Oemedical Prescription Line">
					<field name="name" />
					<field name="allow_substitution" />
					<field name="prnt" />
					<field name="review" />
					<field name="short_comment" />
					<field name="template" />
					<field name="quantity" />
				</tree>
			</field>
		</record>

		<record id="view_medical_prescription_line_form" model="ir.ui.view">
			<field name="name">medical.prescription.line.form</field>
			<field name="model">medical.prescription.line</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="Oemedical Prescription Line">
					<field name="name" />
					<field name="allow_substitution" />
					<field name="prnt" />
					<field name="review" />
					<field name="short_comment" />
					<field name="template" />
					<field name="quantity" />
				</form>
			</field>
		</record>

		<record id="view_medical_prescription_line_search" model="ir.ui.view">
			<field name="name">medical.prescription.line.search</field>
			<field name="model">medical.prescription.line</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="Oemedical Prescription Line">
					<field name="name" />
					<field name="name" />
					<field name="allow_substitution" />
					<field name="prnt" />
					<field name="review" />
					<field name="short_comment" />
					<field name="template" />
					<field name="quantity" />
					<newline />
					<group expand="0" string="Group By...">
						<filter string="Refills #" domain="[]" context="{'group_by':'name'}" />
						<filter string="Prescription ID" domain="[]"
							context="{'group_by':'name'}" />
						<filter string="Allow substitution" domain="[]"
							context="{'group_by':'allow_substitution'}" />
						<filter string="Print" domain="[]" context="{'group_by':'prnt'}" />
						<filter string="Review" domain="[]" context="{'group_by':'review'}" />
						<filter string="Comment" domain="[]"
							context="{'group_by':'short_comment'}" />
						<filter string="Medication Template" domain="[]"
							context="{'group_by':'template'}" />
						<filter string="Quantity" domain="[]" context="{'group_by':'quantity'}" />
					</group>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="act_open_medical_prescription_line_view">
			<field name="name">Prescription Line</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">medical.prescription.line</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_medical_prescription_line_search" />
			<field name="domain">[]</field>
			<field name="context">{}</field>
		</record>

		<record model="ir.actions.act_window.view" id="act_open_medical_prescription_line_view_form">
			<field name="act_window_id" ref="act_open_medical_prescription_line_view" />
			<field name="sequence" eval="20" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_medical_prescription_line_form" />
		</record>

		<record model="ir.actions.act_window.view" id="act_open_medical_prescription_line_view_tree">
			<field name="act_window_id" ref="act_open_medical_prescription_line_view" />
			<field name="sequence" eval="10" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_medical_prescription_line_tree" />
		</record>

	</data>
</openerp>
