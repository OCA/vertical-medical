<odoo>

        <record id="view_procedure_config_settings" model="ir.ui.view">
            <field name="name">procedure settings</field>
            <field name="model">medical.procedure.request.settings</field>
            <field name="arch" type="xml">
                <form string="Configure Procedure"
                      class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        <button string="Cancel" type="object" name="cancel" class="oe_link" special="cancel"/>
                    </header>
                    <group string="Advanced options"
                           name="advanced_options">
                        <field name="group_procedure" widget="radio"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_procedure_config_settings"
                model="ir.actions.act_window">
            <field name="name">Configure Procedure</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.procedure.request.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

</odoo>
